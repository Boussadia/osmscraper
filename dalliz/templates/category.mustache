<div id="sub_nav" class="navbar navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<ul class="nav">
				{{# categories }}
					<li><a href="/categorie/{{short_url}}" class="{{#is_current_category}}active{{/is_current_category}}">{{name}}</a></li>
				{{/ categories }}
			</ul>
		</div>
	</div>
</div>

<style type="text/css">
/* Nasty fix*/
.{{parent_category}} a{
	color: #9E09A8 !important;
}
</style>

<aside class="block" id="brands">
	<h4>Marques :</h4>
	<input type="checkbox" name="brands_options" id="brand_0" value="0" data-id='0' checked>
	<label class="radio" for="brand_0">Tout</label>
	{{# brands }}
		<input type="checkbox" name="brands_options" id="brand_{{ id }}" value="{{ id }}" data-id='{{ id }}'>
		<label class="radio" for="brand_{{ id }}">{{ name }}</label>
	{{/ brands }}


</aside>

<section class="container" id="category">
	<div class="sorting block">
		<p>Classer Par : </p>
	</div>
	<div class="dropdown">
		<a class="dropdown-toggle" id="text_filter" role="button" data-toggle="dropdown" href="#"> Choisir <b class="caret"></b></a>
		<ul id="menu_filter" class="dropdown-menu" role="menu" aria-labelledby="drop4">
			<li><a tabindex="-1" href="#" id="prix_croissant">prix (croissant)</a></li>
			<li><a tabindex="-1" href="#" id="prix_decroissant">prix (décroissant)</a></li>
		</ul>
	</div>
	<div class="products">
		{{# products}}
			<div class="product block" data-brand="{{brand_id}}"  data-price="{{ price }}">
				<a href="/produit/{{ short_url }}">
					<img src="http://courses.monoprix.fr{{ image_url }}" id="image_product" alt="Image produit en provenance de monoprix.fr">
				</a>
				<div class="brand">{{ brand_name }}</div>
				<div class="product_name">{{ product_name }}</div>
				<div class="price"> A partir de {{ price }} €</div>
				<div class="add_to_cart" data-product-id="{{id}}">
					<!-- <div class="plus"></div> -->
					<form action="/add/cart" method="post">
						<input type="hidden" name="product_id" value="{{id}}">
						<input type="submit" class="text" value="Ajouter au panier">
					</form>
				</div>
			</div>
		{{/ products}}
	</div>

</section>